
<h1 class="text-center jumbotron" >Cocktail ingredients</h1>

<div class="container">
<div class="row">
    <div class="col-xs-4 col-xs-offset-1"></div>
      <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
      <!-- <%= link_to "delete", dose_path(dose), method: :delete, class: 'btn btn-primary' %> -->
  </div>
  <div class="row">

    <div class="col-xs-12 col-md-6 col-md-offset-3" >
      <% @rand_background =  ['berlin', 'shanghai', 'rio'].sample%>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)), url('/assets/<%= @rand_background %>.jpg');">
        <h3> <%= @cocktail.name %>: ingredients </h3>


        <% @cocktail.doses.each do |dose| %>

        <p>

          <%= "#{dose.description} #{dose.ingredient.name}"%>

        </p>

        <% end %>

      </div>
    </div>
  </div>
</div>

